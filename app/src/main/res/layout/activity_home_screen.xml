<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/prussian_blue"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main-button-bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/peitho_segue_button"
            style="?metaButtonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/light_grey"
            android:text="@string/peitho_segue_string" />

        <Button
            android:id="@+id/chart_segue_button"
            style="?metaButtonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/light_grey"
            android:text="@string/charting_segue_string" />

        <ImageButton
            android:id="@+id/info_button"
            style="?metaButtonBarButtonStyle"
            android:layout_width="78dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:backgroundTint="@color/light_grey"
            android:text="@string/dummy_button" />

    </LinearLayout>

</LinearLayout>